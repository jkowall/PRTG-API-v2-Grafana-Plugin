{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "PRTG API v2",
  "id": "prtgapiv2-datasource",
  "metrics": true,
  "annotations": false,
  "alerting": false,
  "info": {
    "description": "Grafana datasource plugin for PRTG Network Monitor API v2. Derived from the original dashboard concept at https://github.com/stylersnico/PRTG-API-v2-Grafana-Dashboard/ and converted to a plugin.",
    "author": {
      "name": "Your Organization"
    },
    "keywords": [
      "prtg",
      "monitoring",
      "network",
      "datasource"
    ],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      {
        "name": "Website",
        "url": "https://github.com/jkowall/PRTG-API-v2-Grafana-Plugin"
      },
      {
        "name": "License",
        "url": "https://github.com/jkowall/PRTG-API-v2-Grafana-Plugin/blob/main/LICENSE"
      }
    ],
    "screenshots": [],
    "version": "1.0.0",
    "updated": "2024-01-01"
  },
  "dependencies": {
    "grafanaDependency": ">=9.0.0",
    "plugins": []
  },
  "routes": [
    {
      "path": "prtg",
      "method": "*",
      "url": "{{ .JsonData.url }}:{{ .JsonData.port }}",
      "headers": [
        {
          "name": "Authorization",
          "content": "Bearer {{ .SecureJsonData.apiKey }}"
        }
      ]
    }
  ]
}